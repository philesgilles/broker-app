<h1>My friends</h1>
<h3>Search friends</h3>
<%= form_tag search_friend_path,remote: true, method: :get do %>
  <div class="input-group mb-4">
    <%= text_field_tag :friend, params[:friend], placeholder: "Enter a name", autofocus: true, class:"form-control form-control-lg rounded-0" %>
    <div class="input-group-append">
      <%= button_tag type: :submit, class: "btn btn-outline-mdb-color waves-effect m-0" do %>
        <%= fa_icon "search lg" %>
      <% end %>
    </div>
  </div>
<% end %>
<div id="friends-results">
</div>
<%= render 'friends/list' %>
